<div class="login">
  <div class="ui middle aligned center aligned grid">
    <div class="column">
      <h2 class="ui teal image header">
        <div class="content">
        </div>
      </h2>
      <form class="ui large form" {{action 'login' on='submit'}}>
        <div class="ui stacked segment">
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              {{input id='name' placeholder='Enter Login' value=name}}
            </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              {{input id='password' placeholder='Enter Password' type='password' value=password}}
            </div>
          </div>
        </div>
        <div class="ui error message"></div>
      </form>
      <div>
        <button type="submit" class="ui fluid large teal submit button">login</button>
      </div>
      <div class="ui message">
        Don't have an account? {{#link-to 'register'}} Sign Up {{/link-to}}
      </div>
    </div>
  </div>


  {{#if errorMessage}}
    <p>{{errorMessage}}</p>
  {{/if}}
</div>

{{outlet}}