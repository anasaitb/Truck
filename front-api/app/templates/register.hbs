<div class="register">
  <div class="ui middle aligned center aligned grid">
    <div class="column">
      <h2 class="ui teal image header">
        <div class="content">
          Registering
        </div>
      </h2>
      <form class="ui large form">
        <div class="ui stacked segment">
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
             {{input id='name' placeholder='Enter user name' value=userName}}
              {{!- {{input type="text" value=userName placeholder="Enter user name" class="ui input"}}
              {{#each model as |user|}}
                {{user.name}} - {{#each user.teams as |team|}}{{team.name}}, {{/each}}<br>
              {{/each}}
            </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              {{!-{{input id='password' placeholder='Enter Password' type='password' value=password}}
              {{input type="text" value=teamName placeholder="Enter team name" class="ui input"}}
            </div>
         </div>
        {{!--  {{#link-to 'login'}}
            <a{{action 'register'}}/>
            <button type="submit" class="ui fluid large teal submit button">Register</button>
          {{/link-to}}--}}
        </div>
            <div class="ui green basic button" {{create-user action 'createUser'}}>Register</div>
        <div class="ui error message"></div>
      </form>
    </div>
  </div>
  {{yield}}
</div>
{{outlet}}